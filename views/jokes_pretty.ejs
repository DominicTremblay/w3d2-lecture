<%- include('./partials/_head') %>

<div class="container">

  <div class="accordion" id="joke-list">

<!-- Each quote is going to be a card element -->

<% for (let jokeId in jokesList) { %>
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#<%= jokeId %>"
            aria-expanded="false" aria-controls="collapseTwo">

            <%= jokesList[jokeId]['question'] %>

          </button>
        </h5>

        <span>
          <form>
            <input type="submit" class="btn btn-secondary btn-sm"
              value="Edit">
          </form>
          <form>
          <input type="submit" class="btn btn-secondary btn-sm"
              value="Delete">
          </form>
        </span>

      </div>
      <div id="<%= jokeId %>" class="collapse" aria-labelledby="headingTwo" data-parent="#joke-list">
        <div class="card-body">
          <h4>Answer</h4>

          <ul class="list-group">
            <li class="list-group-item">
              <%= jokesList[jokeId]['answer'] %>
              <span>
                <form>
                <input type="submit" class="btn btn-secondary btn-sm"
                    value="Edit">
                </form>
                <form >
                <input type="submit" class="btn btn-secondary btn-sm"
                    value="Delete">
                </form>
              </span>
            </li>
          </ul>

        </div>
      </div>
    </div>
    <% } %>
<!-- End of the loop -->
  </div>



</div>
<a href="" class="btn btn-primary">Add Quote</a>
</body>

</html>