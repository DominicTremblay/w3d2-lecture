<%- include('./partials/_head') %>

  <div class="container">
    <h1>Edit Joke</h1>

    <form method="POST" action="/jokes/<%= id %>">
      <div class="form-group">
        <div style="width: 20em;">
          <input style="width: 100%" type="text" name="question" id="question" value="<%= question %>">
          <input style="width: 100%" type="text" name="answer" id="answer" value="<%= answer %>">
        </div>


        <input type="submit" class="btn btn-primary" value="Update" />
      </div>
    </form>
  </div>
  </body>

  </html>